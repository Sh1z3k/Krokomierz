<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tVSzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/kasuj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kasuj"
        android:onClick="kasuj"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Długość kroku"/>
        <EditText
            android:id="@+id/dlKroku"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonZmienKrok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmień krok"
            android:onClick="ustawDlKroku"/>
    </LinearLayout>

    <Button
        android:id="@+id/zmienStopnie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zmień stopnie"
        android:onClick="zmienStopnie"/>
    <Button
        android:id="@+id/activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zmień aktywność"
        android:onClick="changeActivity"/>
</LinearLayout>